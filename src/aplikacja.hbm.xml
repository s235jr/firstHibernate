<?xml version = "1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="encje.Pracownik" table="pracownik">
        <id name="ID" column="ID">
            <generator class="increment"/>
        </id>
        <property name="Imie" column="Imie"/>
        <property name="Nazwisko" column="Nazwisko"/>
        <property name="Stawka" column="Stawka"/>
        <property name="Ilosc_godzin" column="Ilosc_godzin"/>
        <property name="Wynagrodzenie" column="Wynagrodzenie"/>
        <many-to-one name="Stanowisko" column="idstanowiska" not-null="true" insert="false" update="false"/>
    </class>

    <class name="encje.Stanowisko" table="Stanowiska">
        <id name="idstanowiska" column="idstanowiska">
            <generator class="increment"/>
        </id>
        <property name="Stanowisko" column="Stanowisko"/>
        <property name="Opis" column="Opis"/>
        <!--<many-to-one name="Pracownik" column="Stanowisko" not-null="true" insert="false" update="false"/>-->

        <!--<set name="Pracownik" cascade="persist" inverse="true">
            <key column="idstanowiska" not-null="true" />
            <one-to-many class="Pracownik" />
        </set>-->
    </class>
</hibernate-mapping>